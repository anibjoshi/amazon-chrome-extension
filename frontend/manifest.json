{
    "manifest_version":2,
    "name": "Amazon Review Genie",
    "description": "Analyzes Amazon reviews using NLP techniques to reveal important insights about the product",
    "version": "1.0.0",
    "content_scripts": [
        {
            "matches": ["https://*.amazon.com/*"],
            "js": [ "content.js" ]
        }
    ],
  "browser_action": {
    "default_title": "Amazon Review Genie",
    "default_popup": "popup.html"
  },
    "icons": {
        "128": "/images/amazon_icon.png"
    },
    "permissions": [
        "tabs",
        "https://chrome-extension-backend.herokuapp.com/predict",
        "storage",
        "activeTab",
        "downloads"
]
}